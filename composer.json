{
  "name": "whiskyjs/api",
  "authors": [
    {
      "name": "Alexander Selyuchenko",
      "email": "alexander.selyuchenko@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "whiskyjs\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "whiskyjs\\Tests\\": "tests"
    }
  },
  "config": {
    "platform": {
      "php": "7.1.32"
    },
    "preferred-install": {
      "*": "dist"
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "git@gitlab.machaon-dev.ru:machaon/std.git"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.1.32",
    "machaon/std": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "phpstan/phpstan": "^0.12.0@dev",
    "squizlabs/php_codesniffer": "^3.0@dev",
    "brainmaestro/composer-git-hooks": "dev-master"
  },
  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyse install lang src tests ./*.php",
    "lint": "phpcs --standard=./phpcs.xml install lang src tests ./*.php -s",
    "test-frontend": "(cd ./app/src && npm run test)",
    "lint-frontend": "(cd ./app/src && npm run lint)",
    "add-hooks": "cghooks add",
    "update-hooks": "cghooks update"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer test",
        "composer lint",
        "composer analyze",
        "(cd ./app/src && npm run test && npm run lint)"
      ]
    }
  }
}
