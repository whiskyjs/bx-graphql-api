{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "pretty": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "./src/scripts/main/*"
      ],
      "@std/*": [
        "./src/scripts/std/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
